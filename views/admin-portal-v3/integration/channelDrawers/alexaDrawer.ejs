<div class="drawer" id="alexaChannelDrawer">
    <div class="drawer-container">
        <button aria-label="close drawer" class="hb-btn hb-btn-drawer-close" ng-click="$channelsCtrl.cancelEdit('alexaChannelDrawer')">
            <i class="hb-icons hb-icons-Cancel"></i>
        </button>
        <img alt ng-src="/resources/images/alexa.png" style="width: 30px; position: relative; top: -3px;">
        <h3 style="display: inline;">Alexa Channel</h3>
        <div class="drawer-main-body">
            <div class="data-item">
                <span>Configure your Healthcare Bot to communicate with people using Alexa Skill. <a href="https://aka.ms/HBSAlexa" target="_blank">Learn how.</a></span>
            </div>
            <div class="data-item">
                <label class="required">Alexa Skill Id</label>
                <input type="text" class="form-control"
                        aria-label="alexa skill id"
                        placeholder="Alexa Skill Id"
                        ng-model="$channelsCtrl.alexaSkillId"
                        ng-style="{'border-color': ($channelsCtrl.newValidateAlexa.alexaSkillId) ? 'red' : ''}">
                <span ng-if="$channelsCtrl.newValidateAlexa.alexaSkillId"
                        role="alert"
                        class="form-err-message">{{$channelsCtrl.newValidateAlexa.alexaSkillId}}</span>
            </div>    
            <div class="data-item">
                <label>Service Url Endpoint</label>
                <div>
                    <input type="text" readonly ng-model="$channelsCtrl.serviceEndpointUri" class="form-control" style="width: 92%; display: inline;" >
                    <button aria-label="copy service url to clipboard" style="position: relative; background-color: transparent;" ng-click="$app.copyToClipboard($channelsCtrl.serviceEndpointUri)">
                        <i class="hb-icons hb-icons-ClipboardSolid"></i>
                    </button>
                    <i ng-show="$channelsCtrl.generatingToken" class="hb-icons hb-icons-spin hb-icons-Process verifyToken"></i>
                </div> 
            </div>
    
        </div>
    </div>
    <div class="drawer-buttons">
        <button class="hb-btn hb-btn-primary drawer-button" <% if (isSysAdmin || isAdmin || isEditor) { %> ng-click="$channelsCtrl.createAlexaChannel()" <% } else { %> disabled <% } %>>Save</button>
        <button type="button" aria-label="close drawer" class="hb-btn hb-btn-secondary drawer-button" ng-click="$channelsCtrl.cancelEdit('alexaChannelDrawer')">Cancel</button>
    </div>
</div>
