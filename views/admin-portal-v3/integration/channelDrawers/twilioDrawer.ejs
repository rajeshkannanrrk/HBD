<div class="drawer" id="twilioChannelDrawer">
    <div class="drawer-container">
        <button aria-label="close drawer" class="hb-btn hb-btn-drawer-close" ng-click="$channelsCtrl.cancelEdit('twilioChannelDrawer')">
            <i class="hb-icons hb-icons-Cancel"></i>
        </button>
        <img alt ng-src="/resources/images/sms.png" style="width: 30px; position: relative; top: -3px;">
        <h3 style="display: inline;">Twilio Channel</h3>
        <div class="drawer-main-body">
            <div class="data-item">
                <span>Configure your Health Bot to communicate with people using the Twilio cloud communication platform. <a href="https://aka.ms/HBSTwillio" target="_blank">Learn how.</a></span>
            </div>
            <div class="data-item">
                <label class="required">Phone Number</label>
                <input type="text" class="form-control"
                        aria-label="phone number"
                        placeholder="+[country code][area code][phone number]"
                        ng-model="$channelsCtrl.phoneNumber"
                        id="ap-twilio-phoneNumber"
                        ng-style="{'border-color': ($channelsCtrl.newValidateTwilio.phoneNumber) ? 'red' : ''}">
                <span ng-if="$channelsCtrl.newValidateTwilio.phoneNumber"
                        role="alert"
                        class="form-err-message">{{$channelsCtrl.newValidateTwilio.phoneNumber}}</span>
            </div>
            <div class="data-item">
                <label class="required">Account SID</label>
                <input type="text" class="form-control"
                        aria-label="account sid"
                        placeholder="Account Sid can be found in your Twilio account settings"
                        id="ap-twilio-accountSID"
                        ng-model="$channelsCtrl.accountSID"
                        ng-style="{'border-color': ($channelsCtrl.newValidateTwilio.accountSID) ? 'red' : ''}">
                <span ng-if="$channelsCtrl.newValidateTwilio.accountSID"
                        role="alert"
                        class="form-err-message">{{$channelsCtrl.newValidateTwilio.accountSID}}</span>
            </div>    
            <div class="data-item">
                <label class="required">Auth Token</label>
                <input type="text" class="form-control"
                        aria-label="auth token"
                        placeholder="Auth token can be found in your Twilio account settings"
                        id="ap-twilio-authToken"
                        ng-model="$channelsCtrl.authToken"
                        ng-style="{'border-color': ($channelsCtrl.newValidateTwilio.authToken) ? 'red' : ''}">
                <span ng-if="$channelsCtrl.newValidateTwilio.authToken"
                        role="alert"
                        class="form-err-message">{{$channelsCtrl.newValidateTwilio.authToken}}</span>
            </div>    
    
        </div>
    </div>
    <div class="drawer-buttons">
        <button class="hb-btn hb-btn-primary drawer-button" <% if (isSysAdmin || isAdmin || isEditor) { %> ng-click="$channelsCtrl.createTwilioChannel()" <% } else { %> disabled <% } %>>Save</button>
        <button type="button" aria-label="close drawer" class="hb-btn hb-btn-secondary drawer-button" ng-click="$channelsCtrl.cancelEdit('twilioChannelDrawer')">Cancel</button>
    </div>
</div>
