<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Health BOT - Error</title>
    <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css?build=#{Build.BuildNumber}#">
    <link rel="stylesheet" href="/resources/css/admin-portal-v3/hb-buttons.css?build=#{Build.BuildNumber}#">
    <link rel="stylesheet" href="/resources/css/admin-portal-v3/hb-icons.css?build=#{Build.BuildNumber}#">
    <link rel="stylesheet" href="/resources/css/admin-portal-v3/portal-structure.css?build=#{Build.BuildNumber}#">
</head>

<body>
<% var errorLines = error.split('\n') %>
    <script>
        function logout() {
            var xhr = new XMLHttpRequest();
            xhr.open("POST", '/logout', true);
            xhr.setRequestHeader('Content-Type', 'application/json');
            xhr.send();


            xhr.onreadystatechange = function () {
                location.reload();
            };
        }
    </script>
    <div class="container" style="padding-top: 15%">
        <div class="text-center">
            <img alt src="/resources/images/logo-white.png" style="width:80px"><br>
            <h3 style="display:inline;color:red"><% for (var i = 0; i < errorLines.length; i++) { %><%=errorLines[i]%><br><% } %></h3>
            <br>
            <% if (this.accountName) { %>
            <div class="text-center">
                <a class="hb-btn hb-btn-primary" href="/account/<%=accountName%>" style="width: 120px; display: inline-block;"><i class="hb-icons hb-icons-Home" aria-hidden="true"></i> Home</a>
            </div>
            <br>
            <% } %>
            <div class="text-center">
                <button onclick="logout()" class="hb-btn hb-btn-secondary" style="width: 120px; display: inline-block;"><i class="hb-icons hb-icons-SignOut" aria-hidden="true"></i> logout</button>
            </div>
        </div>
    </div>
</body>

</html>